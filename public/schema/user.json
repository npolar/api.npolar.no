{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/user",
  "title": "User (HTTP service)",
  "description": "User schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "schema", "email", "name"],

  "properties": {
    "_id": {
      "type": "string"
    },
    "_rev": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "groups": {
      "type": "array"
    },
    "author": {
      "type": ["string", "object"]
    },
    "editor": {
      "type": ["string", "object"]
    },
    "roles": {
      "type": "object"
    },
    "dn": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "ssha_password": {
      "type": "string"
    },
    "updated": {
      "type": "string",
      "format": "datetime"
    },
    "published": {
      "type": "string",
      "format": "datetime"
    }
  }
}
