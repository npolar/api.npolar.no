{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/minimal-publication",
  "title": "Minimal-Publication",
  "description": "Metadata describing a publication",
  "type": "object",
  "required": ["title"],
  "properties": {
    "id": {
      "description": "Identifier (UUID | URI)",
      "type": "string"
    },
    "title": {
      "description": "Title should be specific enough to make sense out of context",
      "type": "string"
    },
    "draft": {
      "enum": ["yes"]
    }
  }
}
