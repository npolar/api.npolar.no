{
  "schema": "http://api.npolar.no/schema/api",

  "id": "dataset-api",
  "path": "/dataset",
  "title": "Dataset API",
  "summary": "Norwegian Polar Institute's datasets (discovery-level metadata). Storage format is JSON, but metadata is also available in 3 XML variants: DIF, Atom, and ISO19139.",
  "storage": "Couch",
  "database": "dataset",
  "model": "Metadata::Dataset",
  "middleware": [["Metadata::Rack::DifJsonizer", {}]],
  "search": {
   "engine": "Elasticsearch",
   "uri": "http://dbmaster.data.npolar.no:9200",
   "index": "global",
   "type": "dataset",
   "facets": [
      "topics",
      "sets",
      "links.rel",
      "licences",
      "restricted",
      "placenames.placename",
      "progress",
      "draft",      
      "organisations.id",
      "organisations.roles",
      "people.email",
      "people.roles"
   ]
  },
  "verbs": ["DELETE", "GET", "HEAD", "POST", "PUT"],
  "formats": {"atom":"application/atom+xml", "json":"application/json", "dif":"application/xml", "iso":"application/vnd.iso.19139+xml", "xml":"application/xml"},
  "accepts": {"application/json": "http://api.npolar.no/schema/dataset", "application/xml": "http://gcmd.nasa.gov/Aboutus/xml/dif/dif.xsd"},
  "category": ["CouchDB", "Solr", "Lucene", "REST", "Search", "JSON", "JSON Schema", "XML", "XML Schema", "DIF", "HTTP", "Atom", "ISO19139"],
  "lifecycle": "production",
  "run":"Npolar::Api::Json",
  "auth":{"authorize":"editor","system":"metadata", "authorizer":"Npolar::Auth::Ldap" },
  "open": true
}