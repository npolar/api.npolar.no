{
"schema": "http://api.npolar.no/schema/api",
"id": "sighting-api",
"path": "/sighting",
"title": "Sighting API",
"summary": "Excel sheets from sightings administered by the Norwegian Polar Data Centre",
"storage": "Couch",
"database": "sighting",
"model": "Sighting",
"verbs": [
"DELETE",
"GET",
"HEAD",
"POST",
"PUT"
],
"formats": {
"json": "application/json",
"html": "text/html"
},
"accepts": {
"application/json": ""
},
"category": ["CouchDB", "Elasticsearch", "Lucene", "REST", "Search", "JSON", "JSON Schema", "HTTP"],
"lifecycle": "production",
"run": "Npolar::Api::Json",
"open": false,
"auth": {
"authorize": "editor",
"system": "MMS",
"authorizer": "Npolar::Auth::Ldap"
},
"search": { "engine": "Elasticsearch",
"uri": "http://localhost:9200",
"facets": ["name,species,latitude,longitude,recorded_by,date_identified,habitat,start_date,event_date,locality,files.filename"],
"type": "sighting",
"index": "sighting"
},
"base": "http://api.npolar.no"
}

