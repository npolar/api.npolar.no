{
"schema": "http://api.npolar.no/schema/api",
"id": "sightings-api",
"path": "/sightings",
"title": "Sightings",
"summary": "Sightings administered by the Norwegian Polar Data Centre",
"storage": "Couch",
"database": "sightings",
"model": "sightings",
"verbs": [
"DELETE",
"GET",
"HEAD",
"POST",
"PUT"
],
"formats": {
"json": "application/json",
"html": "text/html"
},
"accepts": {
"application/json": ""
},
"category": ["CouchDB", "Elasticsearch", "Lucene", "REST", "Search", "JSON", "JSON Schema", "HTTP"],
"lifecycle": "production",
"run": "Npolar::Api::Json",
"open": true,
"auth": {
"authorize": "editor",
"system": "MMS",
"authorizer": "Npolar::Auth::Ldap"
},
"search": { "engine": "Elasticsearch",
"uri": "http://localhost:9200",
"facets": ["basisOfRecord", "subAdult", "habitat", "vernacularName", "dateIdentified"],
"type": "sightings",
"index": "sightings"
},
"base": "http://api.npolar.no"
}

