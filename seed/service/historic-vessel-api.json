{
   "id": "historic-vessel-api",
   "schema": "http://api.npolar.no/schema/api",
   "path": "/historic/vessel",
   "title": "Historic vessel API",
   "storage": "Couch",
   "database": "historic-vessel",
   "model": "Historic::Vessel",
   "search": {
       "engine": "Elasticsearch",
       "index": "historic",
       "type": "vessel",
       "params": {
         "facets": "harbours,type,built_where,shipwrecked_location,alpha",
         "rangefacet-built_year": 20,
         "rangefacet-shipwrecked_year": 20,
         "size-facet": 100
       }
   },
   "verbs": [
       "DELETE",
       "GET",
       "HEAD",
       "POST",
       "PUT"
   ],
   "formats": {
       "json": "application/json"
   },
   "accepts": {
       "application/json": "http://api.npolar.no/schema/historic-vessel"
   },
   "category": [
       "CouchDB",
       "REST",
       "Search",
       "JSON",
       "HTTP",
       "Lucene",
       "Elasticsearch"
   ],
   "lifecycle": "experimental",
   "run": "Npolar::Api::Json",
   "auth": {
       "authorize": "sysadmin",
       "system": "api",
       "authorizer": "Npolar::Auth::Ldap"
   },
   "open": true,
   "created_by": "Conrad Helgeland"
}