{
    "_id": "ecotox-fieldwork-api",
    "id": "ecotox-fieldwork-api",
    "schema": "http://api.npolar.no/schema/api",
    "path": "/ecotox/fieldwork",
    "title": "NPI's ecotox database",
    "summary": "Norwegian Polar Institute's archive for ecotoxicological samples.",
    "storage": "Couch",
    "database": "ecotox-fieldwork",
    "model": "Ecotox::Fieldwork",
    "search": {
        "engine": "Elasticsearch",
        "index": "ecotox-fieldwork",
        "type": "ecotox-fieldwork",
        "log": false,
        "params": {
      "facets": "project,species,sex,age,age_group,matrix,event_date,latitude,longitude,placename,weight,rightsholder,people_responsible,project_group,ris_id,species_identification,files.filename",
      "date-year": "created",
      "size-facet": 9999
    }
    },
    "verbs": [
        "DELETE",
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "OPTIONS"
    ],
    "formats": {
        "json": "application/json"
    },
    "accepts": {
        "application/json": "https://api.npolar.no/schema/ecotox-fieldwork.json"
    },
    "category": [
        "CouchDB",
        "Elasticsearch",
        "Lucene",
        "REST",
        "Search",
        "JSON",
        "JSON Schema",
        "HTTP"
    ],
    "lifecycle": "production",
    "run": "Npolar::Api::Json",
    "open": true,
    "middleware": [
        [
            "::Rack::Gouncer",
            {
                "url": "https://api.npolar.no/user",
                "open": false,
                "system": "https://api.npolar.no/ecotox/fieldwork"
            }
        ]
    ],
    "editlog": {
        "disabled": true
    }
}
