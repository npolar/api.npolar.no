{
  "schema": "http://api.npolar.no/schema/api",
  "id": "oceanography-buoy-api",
  "path": "/oceanography/buoy",
  "title": "Physical oceanography buoy API",
  "summary": "Norwegian Polar Institutes physical oceanography API. Contains buoy data.",
  "storage": "Couch",
  "database": "oceanography_buoy",
  "model": "OceanographyPoint",
  "editlog": {
    "disabled": true
  },
  "search": {
    "engine": "Elasticsearch",
    "index": "oceanography_buoy",
    "type": "oceanography_point",
    "log": false,
    "bulk_size": 500,
    "params": {
      "facets": "collection,title,IMEI",
      "date-year": "measured"
    }
  },
  "verbs": [
    "DELETE",
    "GET",
    "HEAD",
    "POST",
    "PUT",
    "OPTIONS"
  ],
  "formats": {
    "json": "application/json"
  },
  "accepts": {
    "application/json": "http://api.npolar.no/schema/oceanography_point"
  },
  "category": [
    "CouchDB",
    "Lucene",
    "REST",
    "Search",
    "JSON",
    "JSON Schema",
    "HTTP"
  ],
  "lifecycle": "production",
  "run": "Npolar::Api::Json",
  "open": true,
  "middleware": [],
  "auth": {
    "authorize": "sysadmin",
    "system": "api",
    "authorizer": "Npolar::Auth::Ldap"
  }
}
