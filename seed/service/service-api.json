{
  "schema": "http://api.npolar.no/schema/api",
  "id": "service-api",
  "after": "Service.after_lambda",
  "path": "/service",
  "title": "Service API",
  "summary": "Each service document is used for running API; contains path, formats, accepted types, etc.",
  "storage": "Couch",
  "database": "api_service",
  "model": "Service",
  "verbs": [
    "DELETE",
    "GET",
    "HEAD",
    "POST",
    "PUT"
  ],
  "formats": {
    "json": "application/json"
  },
  "accepts": {
    "application/json": "http://api.npolar.no/schema/api"
  },
  "category": [
    "CouchDB",
    "REST",
    "JSON",
    "HTTP"
  ],
  "lifecycle": "production",
  "run": "Npolar::Api::Json",
  "open": true,
  "auth": {
    "authorize": "sysadmin",
    "system": "api",
    "authorizer": "Npolar::Auth::Ldap"
  },
  "base": "http://api.npolar.no"
}