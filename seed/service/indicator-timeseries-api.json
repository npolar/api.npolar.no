{
   "id": "indicator-timeseries-api",
   "schema": "http://api.npolar.no/schema/api",
   "path": "/indicator/timeseries",
   "title": "Environmental timeseries API",
   "storage": "Couch",
   "database": "indicator-timeseries",
   "model": "Indicator::Timeseries",
   "search": {
       "engine": "Elasticsearch",
       "index": "indicator",
       "type": "timeseries",
       "params": {
           "facets": "systems,species,themes,label,warn,variable,unit,locations.placename",
           "date-year": "datetime",
           "rangefacet-latitude": 10,
           "rangefacet-size": 10,
           "size-facet": 1000,
           "sort": "datetime",
           "filter-collection": "timeseries"
       }
   },
   "verbs": [
     "DELETE",
     "GET",
     "HEAD",
     "POST",
     "PUT"
   ],
   "formats": {
     "json": "application/json"
   },
   "accepts": {
     "application/json": "http://api.npolar.no/schema/indicator-timeseries"
   },
   "category": [
     "CouchDB",
     "REST",
     "Search",
     "JSON",
     "HTTP",
     "Lucene",
     "Elasticsearch"
   ],
   "lifecycle": "experimental",
   "run": "Npolar::Api::Json",
   "auth": {
     "authorize": "sysadmin",
     "system": "api",
     "authorizer": "Npolar::Auth::Couch"
   },
   "open": true,
  "editlog": {"max_body_size": 10000}
}
