{
    "schema": "https://api.npolar.no/schema/api",
    "id": "publication-api",
    "path": "/publication",
    "title": "Publication API",
    "storage": "Couch",
    "database": "publication",
    "model": "Publication",
    "middleware":[
        "::Rack::Gouncer",
        {
            "url": "https://api.npolar.no:8950",
            "open": true,
            "system": "https://api.npolar.no/publication"
        }
    ],
    "search": {
        "engine": "Elasticsearch",
        "index": "publication",
        "type": "publication",
        "params": {
            "size-facet": 99,
            "date-year": "published",
            "facets": "publication_type,publication_lang,topics,category,publisher,people.email,draft,state,locations.area,locations.hemisphere,locations.placename,locations.area,people.organisation"
        }
    },
    "verbs": [
        "DELETE",
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "OPTIONS",
        "OPTIONS"
    ],
    "formats": {
        "json": "application/json; charset=utf8"
    },
    "accepts": {
        "application/json": "https://api.npolar.no/schema/publication"
    },
    "category": [
        "CouchDB",
        "Lucene",
        "REST",
        "Search",
        "JSON",
        "JSON Schema",
        "HTTP"
    ],
    "lifecycle": "production",
    "run": "Npolar::Api::Json",
    "open": true
}
