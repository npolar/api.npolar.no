{
    "id": "statistic-api",
    "schema": "http://api.npolar.no/schema/api",
    "path": "/statistic",
    "title": "Statistic API",
    "summary": "Norwegian Polar Institute's statistics setup database. Storage format is JSON.",
    "storage": "Couch",
    "database": "statistic",
    "model": "Statistic",
    "search": {
        "engine": "Elasticsearch",
        "index": "statistic",
        "type": "statistic",
        "params": {
            "size-facet": 9999,
            "facets": "component.db_field,component.title"
        }
    },
    "verbs": [
        "DELETE",
        "GET",
        "HEAD",
        "OPTIONS",
        "POST",
        "PUT"
    ],
    "formats": {
        "json": "application/json; charset=utf8"
    },
    "accepts": {
        "application/json": "http://api.npolar.no/schema/statistic.json"
    },
    "category": [
        "CouchDB",
        "Lucene",
        "REST",
        "Search",
        "JSON",
        "JSON Schema",
        "HTTP"
    ],
    "lifecycle": "production",
    "run": "Npolar::Api::Json",
    "open": false,
    "middleware": [
        [
            "::Rack::Gouncer",
            {
                "url": "https://api.npolar.no:8950",
                "open": false,
                "system": "https://api.npolar.no/statistic"
            }
        ]
    ]
}
