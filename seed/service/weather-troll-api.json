{
    "id": "weather-troll-api",
    "schema": "http://api.npolar.no/schema/api",
    "path": "/weather/troll",
    "title": "Weather data from the Troll station and airstrip in Donning Maud Land Antarctica.",
    "storage": "Couch",
    "database": "weather-troll",
    "search": {
        "engine": "Elasticsearch",
        "type": "observation",
        "index": "weather-troll",
        "params": {
            "sort": "-created",
            "facets":"station_id",
            "date-year": "measured",
            "date-month": "measured",
            "date-day": "measured"
        }
    },
    "base": "http://api.npolar.no",
    "verbs": [
        "DELETE",
        "GET",
        "HEAD",
        "OPTIONS",
        "POST",
        "PUT"
    ],
    "formats": {
        "json": "application/json"
    },
    "category": [
        "CouchDB",
        "REST",
        "JSON",
        "HTTP"
    ],
    "lifecycle": "production",
    "run": "Npolar::Api::Json",
    "middleware": [
        [
            "::Rack::Gouncer",
            {
                "url": "https://api.npolar.no/user/",
                "open": true,
                "system": "https://api.npolar.no/weather/troll"
            }
        ]
    ],
    "editlog": {
        "disabled": true
    },
    "open": true,
    "accepts": {
        "application/json": "http://json.org"
    }
}
