{
    "id": "expedition-api",
    "schema": "http://api.npolar.no/schema/api",
    "path": "/expedition",
    "title": "Norwegian Polar Institutes expedition database",
    "summary": "Norwegian Polar Institutes expedition API. Contains metadata about cruises and land expeditions",
    "storage": "Couch",
    "database": "expedition",
    "search": {
        "engine": "Elasticsearch",
        "index": "expedition",
        "type": "expedition",
        "log": false,
        "bulk_size": 500,
        "params": {
            "facets": "code,summary,topics,start_date,end_date",
            "date-year": "travels.start_date",
            "size-facet": 100
        }
    },
    "verbs": [
        "DELETE",
        "GET",
        "HEAD",
        "OPTIONS",
        "POST",
        "PUT"
    ],
    "formats": {
        "json": "application/json"
    },
    "accepts": {
        "application/json": "http://api.npolar.no/schema/expedition-1"
    },
    "category": [
        "CouchDB",
        "Lucene",
        "REST",
        "Search",
        "JSON",
        "JSON Schema",
        "HTTP"
    ],
    "lifecycle": "production",
    "run": "Npolar::Api::Json",
    "open": true,
    "middleware": [
        [
            "::Rack::Gouncer",
            {
                "url": "https://data.npolar.no:8950",
                "open": true,
                "system": "https://api.npolar.no/expedition"
            }
        ]
    ],
    "model": "Expedition"
}
