{
  "description": "data.npolar.no metadata format",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "description": "UUID for the storage object",
      "type": "string"
    },
    "_rev" : {
      "description": "Dataset revision",
      "type": "string"
    },
    "id": {
      "description": "Document ID should be the same as _id",
      "type": "string",
      "required": true
    },
    "title": {      
      "description": "Dataset title. DIF:Entry_Title",
      "type": "string",
      "required": true
    },
    "summary": {
      "description": "Free text describing the dataset DIF:Summary[Abstract]",
      "type": "string"
    },
    "progress": {
      "description": "String describing current project progress. DIF:Progress",
      "type": "string",
      "required": true,
      "pattern": "^(ongoing|complete|planned)$"
    },
    "licences": {
      "description": "Legal licences defining terms of use for the data. DIF:Use_Constraints",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "required": true,
        "pattern": "^(http://creativecommons\\.org/licences/by/3\\.0/no/|http://data\\.norge\\.no/nlod/no/1\\.0|http://creativecommons\\.org/publicdomain/zero/1\\.0/|http://www\\.lovdata\\.no/all/hl-19610512-002\\.html)$" 
      }
    },
    "groups": {
      "description": "Research field the data belongs to. Not Mapped in DIF",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "required": true,
        "pattern": "^(biodiversity|ecotoxicology|geology|geophysics|glaciology|topography|oceanography|seaice)$"
      }
    },
    "editors": {
      "description": "Array containing a list of persons who changed the metadata and the date when. Last Person in the Array is DIF:Personnel[Role] DIF_Author",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "edited": {
            "type": "string",
            "format": "date-time",
            "required": true
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      }
    },
    "investigators": {
      "description": "Used as authors in the citation string. Should be any personnel directly involved in gathering the dataset. DIF:Personnel[@role0='Investigator']",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    },
    "institutions": {
      "description": "Participating institutions",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      }
    },
    "contributors": {
      "description": "Any additional institutions and personnel involved in the project. DIF:Personnel[@Role='Contributor']",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    },
    "point_of_contact": {
      "description": "Department that has direct knowledge about the dataset. This can have an optional person listed. Should be as persistant as possible",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "org": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      }
    },
    "links": {
      "description": "Links to data, data-citations, references, project, parent, doi, related, self, alternate",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel": {
            "type": "string",
            "required": true
          },
          "href": {
            "type": "string",
            "format": "uri",
            "required": true
          },
          "title": {
            "type": "string"
          }
        }
      }
    },
    "locations": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "north": {
            "type": "number"
          },
          "east": {
            "type": "number"
          },
          "south": {
            "type": "number"
          },
          "west": {
            "type": "number"
          },
          "placename": {
            "type": "string"
          },
          "area": {
            "type": "string",
            "pattern": "^(svalbard|jan_mayen|dronning_maud_land|bouvetøya|peter_i_øy|arctic|antarctic|norway|russia|sweden|iceland|greenland|canada|finland|danmark|faroe_islands|united_states)$"
          },
          "country_code": {
            "description": "This field allows the adding of a country code that adheres to ISO 3611-1. For example SJ for Svalbard and Jan Mayen",
            "type": "string",
            "pattern": "^(([A-Z]|[a-z]){2})$"
          }
        }
      }
    },
    "activity": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "start": {
            "type": "string",
            "format": "date-time"
          },
          "stop": {
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "method_desc": {
      "description": "Scientific method used when collecting the data",
      "type": "string"
    },
    "iso_topics": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      }
    },
    "parameters": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "sensors": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "quality": {
      "type": "string"
    },
    "owners": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "draft": {
      "type": "string",
      "pattern": "^(yes|no)$"
    },
    "sets": {
      "description": "Similar to tags and keywords",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      }
    },
    "science_keywords": {
      "description": "DIF keywords",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Category": {
            "type": "string"
          },
          "Topic": {
            "type": "string"
          },
          "Term": {
            "type": "string"
          },
          "Variable_Level_1": {
            "type": "string"
          },
          "Variable_Level_2": {
            "type": "string"
          },
          "Variable_Level_3": {
            "type": "string"
          },
          "Detailed_Variable": {
            "type": "string"
          }
        }
      }
    },
    "published": {
      "description": "Date-time when the metadata was created in ISO 8601 format",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "Date-time when the metadata was created in ISO 8601 format",
      "type": "string",
      "format": "date-time"
    },
    "comment": {
      "description": "A free text comment",
      "type": "string"
    },
    "source": {
      "description": "This object holds a copy of the original data if generated from an exisitng dataset",
      "type": ["object", "null"],
      "properties": {
        "dif" :{
          "type": "object"
        }
      }
    }
  }
}
