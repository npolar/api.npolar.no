{
  "id": "http://api.npolar.no/schema/seabird-colony",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Seabird",
  "description": "Norwegian Polar Institute's database on Arctic seabird colonies",
  "type": "object",
  "properties": {
    "id": {
      "description": "Resource identifier (UUID)",
      "type": "string"
    },
    "schema": {
      "description": "Schema defining this object (this schema)",
      "type": "string",
      "enum": [
        "http://api.npolar.no/schema/seabird-colony"
      ]
    },
    "lang": {
      "description": "The language of the document",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
    "access_id":{
      "description": "The corresponding MS access database id",
      "type": "string"
    },
     "colony_last_update": {
      "description": "When was field data collected last time?",
      "type": "string",
      "format": "date-time"
    },
     "colony_name": {
      "description": "Colony name",
      "type": "string"
    },
     "colony_alternative_name": {
      "description": "Colony's alternative name",
      "type": "string"
    },
    "conservation_type":{
      "description": "Conservation type",
      "type": "string",
      "enum": [
          "IBA",
          "Ramsar",
          "Emerald",
          "World Heritage",
          "IUCN-categories",
          "National Conservation Status",
          "Biosphere Reserve"
      ]
    },
    "region": {
            "description": "The region the colony belongs to",
            "type": "string",
             "enum": [
             "Frans Josef Land",
             "Novaja Zemlja (Barents Sea)",
             "Nenets district (Barents Sea)",
             "The White Sea",
             "Murman coast",
             "Norwegian coast",
             "Svalbard",
             "Jan Mayen",
             "Novaja Zemlja (Kara Sea)",
             "The Kara Sea Islands",
             "Severnaya Zemlya",
             "Taimyr Peninsula",
             "Yamal/Gydan",
             "Nenets District (Kara Sea)"
            ]
    },
    "zone": {
            "description": "The region the colony belongs to",
            "type": "string",
             "enum": [
             "Hornsund",
             "Bellsund",
             "Isfjorden",
             "Prins Karls Forland",
             "Kongsfjorden/Krossfjorden",
             "NW Spitsbergen",
             "Wijdefjorden",
             "Hinlopen",
