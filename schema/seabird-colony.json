{
  "id": "http://api.npolar.no/schema/seabird-colony",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Seabird",
  "description": "Norwegian Polar Institute's database on Arctic seabird colonies",
  "type": "object",
  "properties": {
    "id": {
      "description": "Resource identifier (UUID)",
      "type": "string"
    },
     "collection": {
      "type": "string",
      "default": "seabird-colony"
    },
    "lang": {
      "description": "The language of the document",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
     "colony_name": {
      "description": "Colony name",
      "type": "string"
    },
     "colony_alternative_name": {
      "description": "Colony's alternative name",
      "type": "string"
    },
    "region": {
            "description": "The region the colony belongs to",
            "type": "string",
             "enum": [
             "Frans Josef Land",
             "Novaja Zemlja (Barents Sea)",
             "Nenets district (Barents Sea)",
             "The White Sea",
             "Murman coast",
             "Norwegian coast",
             "Svalbard",
             "Jan Mayen",
             "Novaja Zemlja (Kara Sea)",
             "The Kara Sea Islands",
             "Severnaya Zemlya",
             "Taimyr Peninsula",
             "Yamal/Gydan",
             "Nenets District (Kara Sea)"
            ]
    },
    "zone": {
            "description": "The region the colony belongs to",
            "type": "string",
             "enum": [
             "Hornsund",
             "Bellsund",
             "Isfjorden",
             "Prins Karls Forland",
             "Kongsfjorden/Krossfjorden",
             "NW Spitsbergen",
             "Wijdefjorden",
             "Hinlopen",
             "Nordaustlandet",
             "Storfjorden",
             "KvitÃ¸ya",
             "Kong Karls Land",
             "Hopen",
             "BjÃ¸rnÃ¸ya",
             "Finnmark east",
             "Finnmark west",
             "Troms north",
             "Troms south",
             "Nordland north",
             "SW archipelago",
             "Central archipelago",
             "NE archipelago",
             "Northern island",
             "Southern island",
             "Outer part, Voronka, Mezen b",
             "Narrow part, Gorlo",
             "Central part, Basin",
             "Dvina bay",
             "Onega bay",
             "Kandalaksha bay",
             "Eastern Murman",
             "Western Murman",
             "Vaigach-Yugor part",
             "Bolshezemelskaya tundra",
             "Pechora bay",
             "Malozemelskaya tundra",
             "Chesha bay",
             "Kolguev island",
             "North-Kanin peninsula",
             "Nord-Jan",
             "SÃ¸r-Jan",
             "Northern Island",
             "Southern Island",
             "Ushakova Island",
             "Vize Island",
             "Uedineniya Island",
             "Sverdrup Island",
             "Voronina Island",
             "Arcticheskogo Inst. Islands",
             "Sergeya Kirova Islands",
             "Izvestiy TSIK Islands",
             "Komsomolets Island",
             "Pioner Island",
             "Oktyabr'skoy Revolyutsii Isl",
             "Bolshevik Island",
             "Sedova Archipelago",
             "Krasnoflotskiye Islands",
             "Malvyy Taimyr Island",
             "Shmidta Island",
             "Northern Taimyr",
             "Central Taimyr",
             "Western Taimyr",
             "Nordenshel'da Archipelago",
             "Taimyr Island Region",
             "Pyasinskiy Bay Islands",
             "Gydanskiy Peninsula",
             "Tazovskiy Peninsula",
             "Yamal Peninsula",
             "Eastern Yugor Peninsula",
             "Vaigach - Yogur part"]
    },
    "location_accuracy": {
            "description": "lat/lon accuracy",
            "type": "string",
            "enum": [
                "> 10 km",
                "< 10 km",
                "< 2 km",
                "< 500 m",
                "< 100 m",
                "GPS-measured",
                "unknown",
                "digital map"
            ]
    },
     "conservation_type":{
      "description": "Conservation type",
      "type": "string",
      "enum": [
          "IBA",
          "Ramsar",
          "Emerald",
          "World Heritage",
          "IUCN-categories",
          "National Conservation Status",
          "Biosphere Reserve"
      ]
    },
    "colony_type": {
            "description": "Type of colony",
            "type": "string",
            "enum": [
              "vertical cliff",
              "hillside",
              "flat area",
              "mixed",
              "unknown"
            ]
    },
    "ownership": {
            "description":"Colony ownership",
            "type": "string",
            "enum": [
              "private",
              "government",
              "claim",
              "combined",
              "unknown"
              ]
    },
    "island": {
         "description": "name of island",
         "type": "string"
    },
    "island_size": {
         "description": "reference journal",
         "type": "string"
    },
    "island_archipelago": {
         "description": "the island belong to archipelago",
         "type": "string"
    },
    "length": {
            "description": "colony length - applies mostly to coast colonies",
            "type": "number"
    },
    "distance": {
            "description": "Distance from colony to closest coastline",
            "type": "number"
    },
    "distance_mainland": {
            "description": "Distance from colony to mainland",
            "type": "number"
    },
    "exposure": {
            "description": "Direction of the colony- south, west, etc",
            "type": "string"
    },
    "area": {
            "description": "Area of cliff wall",
            "type": "string"
    },
    "confirmed": {
            "description": "Year the colony first were confirmed",
            "type": "string"
    },
    "map": {
      "description": "The map that shows the colony place",
            "type": "string"
    },
    "colony_reference":{
       "description": "Where the colony is mentioned first",
       "type": "object",
        "properties": {
             "ref_id":{
                "description": "refenceID from MS database.",
                "type": "string"
             },
             "ref_unique_id": {
                "description": "refence id from ?",
                "type": "string"
             },
             "authors": {
                "description": "reference authors",
                "type": "string"
             },
             "title": {
                "description": "reference title",
                "type": "string"
             },
             "year": {
                "description": "year reference was published",
                "type": "string"
             },
              "volume": {
                "description": "year reference was published",
                "type": "string"
             },
             "pages": {
                "description": "refence pages",
                "type": "string"
             },
             "journal": {
                "description": "reference journal",
                "type": "string"
             }
        },
      "additionalProperties": false
    },
    "comment": {
      "description": "Colony comments",
            "type": "string"
    },
     "geometry":
     {
  "description": "Geojson object outlining the colony",
  "type": "object",
  "properties": {
    "geometries": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": {
          "description": "the type of geometry object",
          "type": "string",
          "enum": [
            "Point",
            "Polygon"
          ]
        },
        "coordinates": {
          "oneOf": [{
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": {
                  "type": "number"
                }
              }
            },
            {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": {
                    "type": "array",
                    "additionalItems": false,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          ]
        }
      }
     }
    }
   },
    "historical_colony": {
      "description": "where was the colony first described - field used f.ex. if colony can't be found anymore to keep old data",
            "type": "string"
    },
    "colony_area":{
      "description": "1 if there exists a location area polygon for the colony an 0 if not.",
            "type": "boolean"
    },
    "predators":{
      "description": "Predators in the colony",
      "type": "string",
      "enum": [
          "rat",
          "mink",
          "cat",
          "hare",
          "other"
      ]
    },
    "access_id": {
      "description": "The corresponding MS access database id for count",
      "type": "string"
    },
    "species": {
      "description": "Which species",
      "type": "string"
    },
    "start_date": {
      "description": "Start date of counting",
      "type": "string",
      "format": "date-time"
    },
    "end_date": {
      "description": "End date of counting",
      "type": "string",
      "format": "date-time"
    },
    "mean":{
      "description": "mean count value for the species in the colony",
      "type": "number"
    },
    "max":{
      "description": "max count value for the species in the colony",
      "type": "number"
    },
    "min":{
      "description": "min count value for the species in the colony",
      "type": "number"
    },
    "accuracy":{
      "description": "how accurate is the count",
      "type": "string",
      "enum": [
          "exactly",
          "rough estimate"
      ]
    },
    "unit":{
      "description": "Type of unit",
      "type": "string",
      "enum": [
          "pair",
          "individual",
          "unknown",
          "apparently occupied nest",
          "nest",
          "adult male",
          "unknown but probably pairs",
          "unknown but probably individuals"
      ]
    },
    "method":{
      "description": "Counting method",
      "type": "string",
      "enum": [
          "direct count",
          "from photograph",
          "extrapolated",
          "combination",
          "unknown"
      ]
    },
    "platform":{
      "description": "Viewed from platform",
      "type": "string",
      "enum": [
          "land",
          "boat",
          "helicopter",
          "airplane",
          "combination",
          "unknown"
      ]
    },
    "breeding":{
      "description": "Stage of breeding",
      "type": "string",
      "enum": [
          "pre-laying period",
          "eggs only",
          "hatching period",
          "chicks only",
          "unknown but breeding",
          "not breeding season",
          "unknown"
      ]
    },
    "useful":{
      "description": "Useful as total count?",
      "type": "boolean"
    },
    "count_comment":{
      "description": "comment about the count",
      "type": "string"
    },
    "created": {
      "description": "The date the document was created.",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "The date the document was last updated.",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "description": "The username of the person who first created the document in the system.",
      "type": "string"
    },
    "updated_by": {
      "description": "The username of the person who last updated the document in the system.",
      "type": "string"
    },
    "_id": {
      "description": "Internal resource identifier.",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision number.",
      "type": "string"
    },
    "_deleted": {
      "description": "Internal revision number.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
