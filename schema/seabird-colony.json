             "Central part, Basin",
             "Dvina bay",
             "Onega bay",
             "Kandalaksha bay",
             "Eastern Murman",
             "Western Murman",
             "Vaigach-Yugor part",
             "Bolshezemelskaya tundra",
             "Pechora bay",
             "Malozemelskaya tundra",
             "Chesha bay",
             "Kolguev island",
             "North-Kanin peninsula",
             "Nord-Jan",
             "SÃ¸r-Jan",
             "Northern Island",
             "Southern Island",
             "Ushakova Island",
             "Vize Island",
             "Uedineniya Island",
             "Sverdrup Island",
             "Voronina Island",
             "Arcticheskogo Inst. Islands",
             "Sergeya Kirova Islands",
             "Izvestiy TSIK Islands",
             "Komsomolets Island",
             "Pioner Island",
             "Oktyabr'skoy Revolyutsii Isl",
             "Bolshevik Island",
             "Sedova Archipelago",
             "Krasnoflotskiye Islands",
             "Malvyy Taimyr Island",
             "Shmidta Island",
             "Northern Taimyr",
             "Central Taimyr",
             "Western Taimyr",
             "Nordenshel'da Archipelago",
             "Taimyr Island Region",
             "Pyasinskiy Bay Islands",
             "Gydanskiy Peninsula",
             "Tazovskiy Peninsula",
             "Yamal Peninsula",
             "Eastern Yugor Peninsula",
             "Vaigach - Yogur part"]
    },
    "latitude": {
            "description": "Latitude of the location",
            "type": "number",
            "minimum": -90,
            "maximum": 90
    },
    "longitude": {
            "description": "Longitude of the location",
            "type": "number",
            "minimum": -180,
            "maximum": 180
    },
    "location_accuracy": {
            "description": "lat/lon accuracy",
            "type": "string",
            "enum": [
                "> 10 km",
                "< 10 km",
                "< 2 km",
                "< 500 m",
                "< 100 m",
                "GPS-measured",
                "unknown",
                "digital map"
            ]
    },
    "colony_type": {
            "description": "Type of colony",
            "type": "string",
            "enum": [
              "verical cliff",
              "hillside",
              "flat area",
              "mixed",
              "unknown"
            ]
    },
    "ownership": {
            "description":"Colony ownership",
            "type": "string",
            "enum": [
              "private",
              "government",
              "claim",
              "combined",
              "unknown"
              ]
    },
    "island":{
       "description": "Island information about the colony",
       "type": "object",
        "properties": {
             "access_id": {
                "description": "id from the access database",
                "type": "string"
             },
             "island": {
                "description": "name of island",
                "type": "string"
             },
             "size": {
                "description": "reference journal",
                "type": "string"
             },
             "archipelago": {
                "description": "the island belong to archipelago",
                "type": "string"
             }
        },
      "additionalProperties": false
    },
    "length": {
            "description": "colony length - applies mostly to coast colonies",
            "type": "number"
    },
    "distance": {
            "description": "colony length - unsure measurement",
            "type": "number"
    },
    "distance_mainland": {
            "description": "Distance from colony to mainland",
            "type": "number"
    },
    "exposure": {
            "description": "Direction of the colony- south, west, etc",
            "type": "string"
    },
    "area": {
            "description": "Area of cliff wall",
            "type": "string"
    },
    "confirmed": {
            "description": "Year the colony first were confirmed",
            "type": "number"
    },
    "map": {
      "description": "The map that shows the colony place",
            "type": "string"
    },
    "catching": {
      "description": "Can the birds be accessed/caught in this colony",
            "type": "boolean"
    },
     "reference":{
       "description": "Where the colony is mentioned first",
       "type": "object",
        "properties": {
             "ref_id":{
                "description": "refenceID from MS database.",
                "type": "string"
             },
             "ref_unique_id": {
                "description": "refence id from ???",
                "type": "string"
             },
             "authors": {
                "description": "reference authors",
                "type": "string"
             },
             "title": {
                "description": "reference title",
                "type": "string"
             },
             "year": {
                "description": "year reference was published",
                "type": "string"
             },
             "pages": {
                "description": "refence pages",
                "type": "string"
             },
             "journal": {
                "description": "reference journal",
                "type": "string"
             }
        },
      "additionalProperties": false
    },
    "comment": {
      "description": "Colony comments",
            "type": "string"
    },
    "geometry": {
            "description": "Geojson object outlining the colony",
            "type": "object"
    },
    "count": {
     "description": "List of people participating on the cruise",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
    "access_id": {
      "description": "The corresponding MS access database id",
      "type": "string"
    },
    "species": {
      "description": "Which species",
      "type": "string"
    },
    "start_date": {
      "description": "Start date of counting",
      "type": "string",
      "format": "date-time"
    },
    "end_date": {
      "description": "End date of counting",
      "type": "string",
      "format": "date-time"
    },
    "mean":{
      "description": "mean count value for the species in the colony",
      "type": "number"
    },
    "max":{
      "description": "max count value for the species in the colony",
      "type": "number"
    },
    "min":{
      "description": "min count value for the species in the colony",
      "type": "number"
    },
    "accuracy":{
      "description": "how accurate is the count",
      "type": "string",
      "enum": [
          "exactly",
          "rough estimate"
      ]
    },
    "unit":{
      "description": "Type of unit",
      "type": "string",
      "enum": [
          "individual",
          "unknown",
          "apparently occupied nest",
          "nest",
          "adult male",
          "unknown but probably pairs",
          "unknown but probably individuals"
      ]
    },
    "method":{
      "description": "Counting method",
      "type": "string",
      "enum": [
          "direct count",
          "from photograph",
          "extrapolated",
          "combination",
          "unknown"
      ]
    },
    "platform":{
      "description": "Viewed from platform",
      "type": "string",
      "enum": [
          "land",
          "boat",
          "helicopter",
          "airplane",
          "combination",
          "unknown"
      ]
    },
    "breeding":{
      "description": "Stage of breeding",
      "type": "string",
      "enum": [
          "pre-laying period",
          "eggs only",
          "hatching period",
          "chicks only",
          "unknown but breeding",
          "not breeding season",
          "unknown"
      ]
    },
    "useful":{
      "description": "Useful as total count?",
      "type": "boolean"
    },
    "reference":{
       "description": "The source where the count first was described",
       "type": "object",
        "properties": {
             "ref_id{
                "description": "RefenceID from Access database",
                "type": "string"
             },
             "authors": {
                "description": "reference authors",
                "type": "string"
             },
             "title": {
                "description": "reference title",
                "type": "string"
             },
             "year": {
                "description": "year reference was published",
                "type": "string"
             },
             "volume": {
                "description": "publication volume",
                "type": "string"
             },
             "pages": {
                "description": "refence pages",
                "type": "string"
             },
             "journal": {
                "description": "reference journal",
                "type": "string"
             }
        },
      "additionalProperties": false
    },
    "comment":{
      "description": "comment about the count",
      "type": "string"
    },
     "people": {
 "description": "List of people participating on the cruise",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "obs_id":{
            "description": "RefenceID from Access database",
            "type": "string"
          },
          "first_name": {
            "description": "First and middle name",
            "type": "string"
          },
          "last_name": {
            "description": "Last name",
            "type": "string"
          },
           "address": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
           "phone": {
            "type": "string"
          }
        }
      }
}
}}},
    "created": {
      "description": "The date the document was created.",
      "type": "string",
      "format": "date-time"
    },
    "historical_colony": {
      "description": "where was the colony first described",
            "type": "string"
    },
    "colony_area":{
      "description": "area measured from above - 0 and 1 - remove ??",
            "type": "string"
    },
     "predators":{
      "description": "Predators in the colony",
      "type": "string",
      "enum": [
          "rat",
          "mink",
          "cat",
          "rabbit",
          "other"
      ]
    },
    "updated": {
      "description": "The date the document was last updated.",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "description": "The username of the person who first created the document in the system.",
      "type": "string"
    },
    "updated_by": {
      "description": "The username of the person who last updated the document in the system.",
      "type": "string"
    },
    "_id": {
      "description": "Internal resource identifier.",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision number.",
      "type": "string"
    },
    "_deleted": {
      "description": "Internal revision number.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
