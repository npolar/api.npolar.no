{
  "id": "http://api.npolar.no/schema/expedition-1",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Expedition",
  "description": "Norwegian Polar Data expedition description.",
  "type": "object",
  "required":[
     "type",
     "code",
     "summary",
     "start_date",
     "end_date",
     "@departure_placename",
     "@return_placename"
  ],
  "properties": {
    "id": {
      "description": "Resource identifier (UUID).",
      "type": "string"
    },
    "schema": {
      "description": "Schema defining this object (this schema).",
      "type": "string",
      "enum": [
        "http://api.npolar.no/schema/expedition-1"
      ]
    },
    "lang": {
      "description": "The language of the document.",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
    "code": {
      "description": "Should be a descriptive code that the expedition can be identified by. Example Framstrait2014.",
      "type": "string"
    },
    "type": {
      "description": "Defines what the nature of the expedition is. Options are cruise, field work, traverse, etc...",
      "type": "string",
      "enum": ["cruise","fieldwork"]
    },
    "summary": {
      "description": "A free text explaining the area of operation and any specifics about the expedition.",
      "type": "string"
    },
    "platforms": {
      "description": "A list containing the vehicles/vessels used for the expedition.",
      "type": "array",
      "items": {
        "description": "A vehicle or vessel.",
        "type": "object",
        "properties": {
          "type": {
            "description": "The type of platform being used.",
            "type": ["string","null"],
            "enum": [
             "",
             "ship",
             "boat",
             "helicopter",
             "snowmobile",
             "snow tractor",
             "hovercraft",
             "other"
            ]
          },
          "name": {
            "description": "The name of the vessel or vehicle. Example 'RV Lance.'",
            "type": "string"
          },
           "sponsor": {
        "description": "X18 EDMO code for NPI or the partner NPI keeps this dataset (cruise entry) on behalf of",
        "type": ["string","null"]
        }
      }
    },
        "additionalProperties": false,
        "additionalItems": false
    },
    "start_date": {
        "type": "string",
        "format": "date-time"
    },
    "end_date": {
        "type": "string",
        "format": "date-time"
    },
    "@departure_placename": {
        "description": "The placename of the departure location. cruise - list C38, TOS,LYB, Cape Town most important",
        "type": "string"
    },
    "@return_placename": {
        "description": "The placename of the return location.",
        "type": "string"
    },
    "research_program": {
        "description": "The connected research programme (if applicable)",
        "type": "string"
    },
    "activity": {
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                 "activity_type": {
                    "description": "Activity type",
                    "type": ["string","null"],
                    "enum": [
                    "",
                    "research",
                    "monitoring",
                    "mapping",
                    "outreach VIP",
                    "education",
                    "logistic operations",
                    "other"]
                  },
                  "activity_title": {
                    "description": "Activity title",
                    "type": "string"
                  },
                  "href": {
                     "description": "Web link to activity resource",
                     "type": "string",
                    "format": "uri"
                  },
                  "topics": {
                    "description": "A list of one or more npolar topics identifying the subject matter of the expedition.",
                    "type": "array",
                    "items": {
                      "type": ["string", "null"],
                      "enum": [
                        "not applicable",
                        "acidification",
                        "atmosphere",
                        "biology",
                        "biochemistry",
                        "biodiversity",
                        "chemistry",
                        "climate",
                        "conservation",
                        "ecology",
                        "ecotoxicology",
                        "environment",
                        "geology",
                        "geophysics",
                        "glaciology",
                        "history",
                        "human-dimension",
                        "management",
                        "marine",
                        "marineecosystems",
                        "maps",
                        "oceanography",
                        "other",
                        "paleoclimate",
                        "remote-sensing",
                        "seaice",
                        "snow",
                        "terrestrial",
                        "topography",
                        "vegetation"
                      ]
                      },
                     "additionalItems": false
                    }
              }
            }
    },
   "people": {
 "description": "List of people participating on the cruise",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "first_name": {
     "description": "First and middle name",
            "type": "string"
          },
          "last_name": {
            "description": "Last name",
            "type": "string"
          },
           "@organisation": {
            "type": "string"
          },
          "@country": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type":"string",
               "enum": [
              "expedition/cruise leader",
              "field assistant",
              "guest",
              "investigator",
              "other",
              "principal investigator",
              "technitian"
            ]
          }
          },
          "expedition_dates": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "start_date": {
                "type": "string",
                "format": "date-time"
            },
              "end_date": {
                "type": "string",
                "format": "date-time"
            }
            }
          }
         }
        }
      }
   },
      "ship_type": {
        "description": "X28 ship name aka research vessel no 31",
        "type": "string",
        "enum": ["researchVessel"]
      },
      "use_limitation": {
        "description": "X34 publicly available or not",
        "type": "string",
        "enum": ["none"]
      },
      "availability": {
        "description": "X35 who can access the metadata",
        "type": "string",
        "enum": ["unrestricted"]
      },
      "files": {
            "type": "array",
            "description": "",
            "items": {
                  "type": "object",
                  "properties": {
                      "uri": {
            "type": "string",
            "description": "Web address (URI) of the attached file",
            "format": "uri"
          },
          "filename": {
            "type": "string",
            "description": "File name"
          },
          "type": {
            "type": "string",
            "description": "Media type"
          },
          "length":{
            "type": "integer",
            "description": "File size in bytes"
          },
          "hash": {
            "type": "string",
            "description": ""
          }
                  }
            }
      },
      "track_information": {
 "description": "List of places and times for the track",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
           "placename": {
              "description": "The official placename of the location.",
              "type": "string"
            },
            "predefined_area": {
              "description": "The official placename of the location.",
              "type": ["string", "null"],
               "enum": [
                    "",
                    "Sverdrup Research Station",
                    "Zeppelin Research Station",
                    "Ny-Ålesund",
                    "Svalbard",
                    "Frans Josefs land",
                    "Bjørnøya",
                    "Jan Mayen",
                    "Hopen",
                    "Bouvetøya",
                    "Troll",
                    "Tor",
                    "Dronning Maud Land",
                    "Antarctica",
                    "Fram Strait",
                    "Arctic Ocean",
                    "Barents Sea North",
                    "Southern Ocean",
                    "other"
              ]
            },
            "start_date": {
                  "type": "string",
                  "format": "date-time"
             },
            "end_date": {
                  "type": "string",
                  "format": "date-time"
            }
        }
      }
     },
      "locations": {
        "description": "A list of one or more geographic locations relevant to the expedition.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
             "north": {
                  "description": "Location north.",
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
            },
            "east": {
                  "description": "Location east.",
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
            },
            "south": {
                  "description": "Location south.",
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
            },
            "west": {
                  "description": "Location west.",
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
            },
             "places": {
            "type": "array",
            "description": "",
            "items": {
                  "type": "object",
                  "properties": {
                    "placename": {
                      "description": "The official placename of the location.",
                      "type": "string"
                    },
                  "predefined_area": {
                    "description": "The official placename of the location.",
                    "type": ["string", "null"],
                    "enum": [
                        "",
                        "Sverdrup Research Station",
                        "Zeppelin Research Station",
                        "Ny-Ålesund",
                        "Svalbard",
                        "Frans Josefs land",
                        "Bjørnøya",
                        "Jan Mayen",
                        "Hopen",
                        "Bouvetøya",
                        "Troll",
                        "Tor",
                        "Dronning Maud Land",
                        "Antarctica",
                        "Fram Strait",
                        "Arctic Ocean",
                        "Barents Sea North",
                        "Southern Ocean",
                        "other"
                  ]
                },
                "start_date": {
                  "type": "string",
                  "format": "date-time"
                },
                "end_date": {
                  "type": "string",
                  "format": "date-time"
                }
               }
              }
            }
          }
        },
        "additionalItems": false
      },
      "draft": {
        "description": "The publication state of the document.",
        "type": "string",
        "enum": [
          "yes",
          "no"
        ]
      },
      "collection": {
        "description": "The storage collection the document belongs to.",
        "type": "string",
        "enum": [
          "expedition"
        ]
      },
      "comment": {
        "description": "A free text comment for anything of importance to the expedition description.",
        "type": "string"
      },
      "created": {
        "description": "The date the document was created.",
        "type": "string",
        "format": "date-time"
      },
      "updated": {
        "description": "The date the document was last updated.",
        "type": "string",
        "format": "date-time"
      },
      "created_by": {
        "description": "The username of the person who first created the document in the system.",
        "type": "string"
      },
      "updated_by": {
        "description": "The username of the person who last updated the document in the system.",
        "type": "string"
      },
      "_id": {
        "description": "Internal resource identifier.",
        "type": "string"
      },
      "_rev": {
        "description": "Internal revision number.",
        "type": "string"
      },
      "_deleted":{
        "description": "deleted entry",
        "type": "string"
      }
    }
}
