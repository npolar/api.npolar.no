{
  "id": "http://api.npolar.no/schema/seabird",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Seabird",
  "description": "Norwegian Polar Institute's database on Arctic seabirds counting and tagging",
  "type": "object",
  "properties": {
    "id": {
      "description": "Resource identifier (UUID)",
      "type": "string"
    },
    "schema": {
      "description": "Schema defining this object (this schema)",
      "type": "string",
      "enum": [
        "http://api.npolar.no/schema/seabird"
      ]
    },
    "lang": {
      "description": "The language of the document",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
    "access_id": {
      "description": "The corresponding MS access database id",
      "type": "string"
    },
    "colony_id": {
      "description": "Species belonging to colony",
      "type": "string"
    },
    "species": {
      "description": "Which species",
      "type": "string"
    },
    "start_date": {
      "description": "Start date of counting",
      "type": "string",
      "format": "date-time"
    },
    "end_date": {
      "description": "End date of counting",
      "type": "string",
      "format": "date-time"
    },
    "mean":{
      "description": "mean count value for the species in the colony",
      "type": "number"
    },
    "max":{
      "description": "max count value for the species in the colony",
      "type": "number"
    },
    "min":{
      "description": "min count value for the species in the colony",
      "type": "number"
    },
    "accuracy":{
      "description": "how accurate is the count",
      "type": "string",
      "enum": [
          "exactly",
          "rough estimate"
      ]
    },
    "unit":{
      "description": "Type of unit",
      "type": "string",
      "enum": [
          "individual",
          "unknown",
          "apparently occupied nest",
          "nest",
          "adult male",
          "unknown but probably pairs",
          "unknown but probably individuals"
      ]
    },
    "method":{
      "description": "Counting method",
      "type": "string",
      "enum": [
          "direct count",
          "from photograph",
          "extrapolated",
          "combination",
          "unknown"
      ]
    },
    "platform":{
      "description": "Viewed from platform",
      "type": "string",
      "enum": [
          "land",
          "boat",
          "helicopter",
          "airplane",
          "combination",
          "unknown"
      ]
    },
    "breeding":{
      "description": "Stage of breeding",
      "type": "string",
      "enum": [
          "pre-laying period",
          "eggs only",
          "hatching period",
          "chicks only",
          "unknown but breeding",
          "not breeding season",
          "unknown"
      ]
    },
    "useful":{
      "description": "Useful as total count?",
      "type": "boolean"
    },
    "reference":{
       "description": "The source where the count first was described",
       "type": "object",
        "properties": {
             "refID": {
                "description": "RefenceID from Access database",
                "type": "string"
             },
             "authors": {
                "description": "reference authors",
                "type": "string"
             },
             "title": {
                "description": "reference title",
                "type": "string"
             },
             "year": {
                "description": "year reference was published",
                "type": "string"
             },
             "pages": {
                "description": "refence pages",
                "type": "string"
             },
             "journal": {
                "description": "reference journal",
                "type": "string"
             }
        },
      "additionalProperties": false
    },
    "comment":{
      "description": "comment about the count",
      "type": "string"
    },
     "people": {
 "description": "List of people participating on the cruise",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "first_name": {
            "description": "First and middle name",
            "type": "string"
          },
          "last_name": {
            "description": "Last name",
            "type": "string"
          },
           "address": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "@country": {
            "type": "string"
          },
           "phone": {
            "type": "string"
          }
        }
      }
},
    "created": {
      "description": "The date the document was created.",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "The date the document was last updated.",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "description": "The username of the person who first created the document in the system.",
      "type": "string"
    },
    "updated_by": {
      "description": "The username of the person who last updated the document in the system.",
      "type": "string"
    },
    "_id": {
      "description": "Internal resource identifier.",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision number.",
      "type": "string"
    },
    "_deleted": {
      "description": "Internal revision number.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
