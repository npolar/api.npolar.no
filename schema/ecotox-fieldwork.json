{
  "id": "http://api.npolar.no/schema/ecotox-fieldwork",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Ecotox-fieldwork",
  "description": "Norwegian Polar Institute's ecotox database.",
  "type": "object",
  "required":[
       "id"
  ],
  "properties": {
    "id": {
      "description": "Resource identifier (UUID).",
      "type": "string"
    },
    "schema": {
      "description": "Schema defining this object (this schema).",
      "type": "string",
      "enum": [
        "http://api.npolar.no/schema/ecotox-fieldwork"
      ]
    },
    "lang": {
      "description": "The language of the document",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
    "ecotox_template": {
      "description": "Collection for a project/research",
      "type": "string"
    },
    "project_name": {
      "description": "Project name or other identificator",
      "enum": ["BearHealth","BearEnergy","MOSJ","thesis"],
      "type": "string"
    },
    "project_category": {
      "description": "Type of project",
      "enum": ["research","screening","monitoring"],
      "type": "string"
    },
    "basis_of_record":{
      "description": "Darwin core term",
      "enum": ["PreservedSample"],
      "type": "string"
    },
    "parent_event_id":{
      "description": "ID to parent expedition database",
      "type": "string"
    },
    "event_date":{
      "description": "Date the sample was collected",
      "type": "string"
    },
    "ris_id":{
      "description": "Project number ResearchInSvalbard database",
      "type": "string"
    },
    "rightsholder":{
      "description": "Name of institutions owning the data",
      "type": "array",
      "additionalItems": false,
      "items": {
      "enum": [
        "NPI",
        "NTNU",
        "UiO",
        "NPI,UiO",
        "NPI,NMBU",
        "NPI,NTNU,NMBU"
      ],
        "type": "string"
      }},
      "reference":{
        "description": "Published papers using the sample",
        "type": "array",
        "additionalItems": false,
        "items": {
          "type": "string"
      }},
      "species":{
        "description": "Sample taken from species (Latin name)",
        "enum": ["ursus maritimus", "vulpes lagopus", "rangifer tarandus platyrhynchus",
                 "lagopus muta hyperborea", "microtus levis",
                 "boreogadus saida","salvelinus alpinus","mallotus villosus",
                 "strongylocentrotus droebachiensis","hyas araneus","buccinum undatum",
                 "buccinum glaciale", "mya truncata",
                 "gymnacanthus tricuspis","myoxocephalus scorpius",
                 "phoca vitulina","erignathus barbatus", "pagophilus groenlandicus",
                 "cystophora cristata","pusa hispida", "phoca groenlandica",
                 "odobenus rosmarus","leptonychotes weddellii",
                 "orcinus orca","balaenoptera musculus","delphinapterus leucas", "megaptera novaeangliae",
                 "monodon monoceros","hyperoodon ampullatus",
                 "lagenorhynchus albirostris", "blaenoptera acutorostrata", "hyseter macrocephalus",
                 "balaenoptera physalus","monodon monoceros", "globicephala melas", "balaena mysticetus",
                 "bubo scandiacus","larus hyperboreus","uria lomvia","uria aalge","rissa tridactyla",
                 "somateria mollissima","somateria spectabilis","fratercula arctica","phalacrocorax aristotelis",
                 "larus argentatus", "morus bassanus", "fulmarus glacialis", "alle alle", "alca torda",
                 "phalaropus lobatus","phalaropus fulicarius","stercocarius parasiticus","stercorarius pomarinus",
                 "stercorarius skua","stercorarius longicaudus", "calidris maritima", "clangula hyemalis", "pluvialis apricaria",
                 "branta leucopsis", "branta bernicla", "gavia immer", "gavia stellata","plectrophenax nivalis",
                 "pagophila eburnea", "anser brachyrhynchus", "calidris alpina",
                 "sterna paradisaea", "cepphus grylle", "larus marinus", "rhodostethia rosea","xema sabini",
                 "charadrius hiaticula","calidris alba","arenaria interpres"],
        "type": "string"
      },
      "species_identification":{
        "description": "bird ring, polar bear id, polar fox id etc",
        "type": "string"
      },
      "colour_ring":{
        "description":"birdring colour",
        "type": "string",
        "enum":["AAD","AAJ","AAV","ABX","ACX","ADB","ADD","AHB","BAB","BAD","BAP","BCD","BDA","BDB","CAA","CAJ","CCA","CCB","CCC","CCD"]
      },
      "euring_code":{
        "description":"ring code EU",
        "type":"string",
        "enum": ["NOS"]
      },
      "matrix":{
      "description": "type of tissue",
      "type": "string",
      "enum": ["egg",
              "milk",
              "whole blood",
              "blood cell",
              "plasma",
              "serum",
              "abdominal fat",
              "subcutaneous fat",
              "blubber",
              "hair",
              "feather",
              "muscle",
              "liver",
              "brain",
              "adrenal",
              "whole animal",
              "gonad",
              "whole animal except lower part of foot",
              "whole animal except closing muscle and siphon",
              "digestive gland"
    ]
    },
    "label_name":{
      "description": "physical sample labeled name",
      "type": "string"
    },
    "no_samples_amount":{
      "description": "number of samples taken, amount, size etc",
      "type": "string"
    },
    "comment":{
      "description": "Sample comment",
      "type": "string"
    },
    "latitude": {
      "type": ["number","null"],
      "minimum": -90.0,
      "maximum": 90.0
    },
    "longitude": {
      "type": ["number","null"],
      "minimum": -180.0,
      "maximum": 180.0
    },
    "position_accuracy": {
        "description": "Accuracy of latitude and longitude measurement",
        "type": "string",
        "enum": ["<10 meter","<100 meter","< 1 km","> 1 km"]
    },
     "placename": {
       "type": "string"
    },
    "people": {
         "description": "People responsible for the dataset",
         "type": "array",
         "additionalItems": false,
         "items": {
           "type": "object",
           "additionalProperties": false,
           "properties": {
             "id": {
               "type": "string"
             },
             "first_name": {
               "type": "string"
             },
             "last_name": {
               "type": "string"
             },
             "organisation": {
               "type": [
                 "string",
                 "null"
               ],
               "enum": ["NPI","UiT","UiO","NTNU","NMBU"]
             },
             "role": {
               "type": "string",
               "enum": ["responsible","collector"]
             }
           }
         }
    },
    "age": {
      "description": "Age of species",
      "type": "string"
    },
    "stage":{
      "description": "Stage plankton",
      "type": "string"
    },
    "sex": {
      "description": "Sex species",
      "enum": ["F","M","unknown"],
      "type": ["string","null"]
    },
    "age_group":{
      "description": "Species age group",
      "enum":["coy","yrlg","2yr","subad","ad"],
      "type": "string"
    },
    "weight": {
      "description":"bodymass or sample mass",
      "type": ["number","null"]
   },
   "girth": {
     "type": ["number","null"]
   },
   "length": {
     "type": ["number","null"]
   },
   "blubber_thinkness_back": {
     "type": ["number","null"]
   },
   "molt": {
     "type": ["boolean","null"]
   },
   "tusk_volume":{
     "type":["number",null]
   },
   "tusk_length":{
     "type":["number",null]
   },
   "tusk_girth":{
     "type":["number",null]
   },
   "excel": {
       "description": "Original excel file(s)",
       "type": "array",
       "additionalItems": false,
       "items": {
         "type": "object",
         "additionalProperties": false,
         "properties": {
           "excel_uri": {
            "description": "Uri to excel form",
            "type": "string",
            "format": "uri"
      },
      "excel_filename": {
            "description": "Excel filename",
            "type": "string"
      },
      "excel_type":{
            "description": "Excel type",
            "type": "string"
      },
      "excel_length":{
            "description": "Excel file length",
            "type": "integer"
        }
           }
         }
        },
        "ecotox_lab": {
            "description": "Lab results",
            "type": "array",
            "additionalItems": false,
            "items": {
                 "description": "uuid to lab result",
                 "type": "string"
              }
        },
        "collection": {
          "description": "The storage collection the document belongs to.",
          "type": "string",
          "enum": [
            "ecotox-fieldwork"
          ]
        },
        "created": {
          "description": "The date the document was created.",
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "description": "The date the document was last updated.",
          "type": "string",
          "format": "date-time"
        },
        "created_by": {
          "description": "The username of the person who first created the document in the system.",
          "type": "string"
        },
        "updated_by": {
          "description": "The username of the person who last updated the document in the system.",
          "type": "string"
        },
        "_id": {
          "description": "Internal resource identifier.",
          "type": "string"
        },
        "_rev": {
          "description": "Internal revision number.",
          "type": "string"
        },
        "_deleted":{
          "description": "Deleted entry",
          "type": "string"
        },
        "@context": {
          "id": "http://rs.tdwg.org/dwc/terms/eventID",
          "parent_event_id": "https://api.npolar.no/expedition",
          "event_date": "http://rs.tdwg.org/dwc/terms/eventDate",
          "location": "http://purl.org/dc/terms/Location",
          "latitude":  "http://rs.tdwg.org/dwc/terms/decimalLatitude",
          "longitude": "http://rs.tdwg.org/dwc/terms/decimalLongitude",
          "event_remarks": "http://rs.tdwg.org/dwc/terms/eventRemarks",
          "reference": "http://rs.tdwg.org/dwc/terms/fieldNotes",
          "basis_of_record":"http://rs.tdwg.org/dwc/terms/basisOfRecord",
          "rightsholder":"http://purl.org/dc/terms/rightsHolder",
          "species":"http://rs.tdwg.org/dwc/terms/acceptedNameUsage",
          "people": "https://schema.org",
          "identifier":"https://schema.org/identifier",
          "first_name":"https://schema.org/givenName",
          "last_name": "https://schema.org/familyName",
          "organisation": "https://schema.org/affiliation",
          "species_identification": "http://rs.tdwg.org/dwc/terms/identificationID",
          "additional_fields":"http://rs.tdwg.org/dwc/terms/dynamicProperties",
          "ecotox_lab":"https://api.npolar.no/ecotox-lab",
          "ris_id":"https://www.researchinsvalbard.no/search/result?q="
}
      },
"additionalProperties": true
  }
