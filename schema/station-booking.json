{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/station-booking",
  "type": "object",
  "additionalProperties": false,
  "required": ["research_type", "research_station"],
  "properties": {
    "id": {
      "type": "string"
    },
    "collection": {
      "type": "string",
      "default": "station-booking"
    },
    "schema": {
      "type": "string"
    },
     "lang": {
      "description": "The language of the document.",
      "type": "string",
      "default": "en",
      "pattern": "^[a-z]{2}$"
    },
    "title": {
      "type": "string"
    },
     "research_station": {
      "type": "string",
      "enum": ["troll","norvegia","sverdrup"]
    },
    "research_type": {
      "type": "string",
      "enum": [
         "research",
         "monitoring",
         "mapping",
         "outreachVIP",
         "education",
         "logisticOperations",
         "other"]
    },
     "summary": {
      "type": "string"
    },
    "stay_dates": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
           "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "topics": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "enum": [
          "not applicable",
          "acidification",
          "atmosphere",
          "biology",
          "biochemistry",
          "biodiversity",
          "chemistry",
          "climate",
          "conservation",
          "ecology",
          "ecotoxicology",
          "environment",
          "geology",
          "geophysics",
          "glaciology",
          "history",
          "human-dimension",
          "management",
          "marine",
          "marineecosystems",
          "maps",
          "oceanography",
          "other",
          "paleoclimate",
          "remote-sensing",
          "seaice",
          "snow",
          "terrestrial",
          "topography",
          "vegetation"
        ]
      }
    },
    "people": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "number_of_persons": {
            "type": "string"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
           "organisation": {
            "type": "string"
          },
          "@country": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type":"string",
               "enum": [
                "carpenter",
                "chef",
                "electrician",
                "expeditionLeader",
                "fieldAssistant",
                "guest",
                "principalInvestigator",
                "investigator",
                "it",
                "ksat",
                "mecanic",
                "mecanicTaf",
                "other",
                "physician",
                "pilot",
                "researchTechnitian",
                "security",
                "serviceTechnitian",
                "transport"
            ]
          }
          },
          "station_dates": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "start_date": {
                "type": "string",
                "format": "date-time"
            },
              "end_date": {
                "type": "string",
                "format": "date-time"
            }
            }
          }
         }
        }
      }
    },
    "links": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel": {
            "type": "string",
             "enum": [
             "",
             "program",
             "dataset",
             "expedition",
             "project"
            ]
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": ["string", "null"]
          },
          "hreflang": {
            "type": ["string", "null"]
          },
          "type": {
            "type": "string"
          }
        }
      }
    },
     "draft": {
      "enum": [
        "yes",
        "no"
      ]
     },
    "comment": {
      "type": "string"
    },
    "changes": {
      "type": "string"
    },
    "created": {
      "description": "Project was published",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "Project was updated",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "updated_by": {
      "type": "string"
    },
    "_id": {
      "description": "Internal id",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision",
      "type": "string"
    },
    "_deleted": {
      "description": "Deleted or not",
      "type": "boolean"
    }
  }
}
