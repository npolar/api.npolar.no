{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/api",
  "title": "API (HTTP service)",
  "description": "Service configuration for an API",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "schema", "base", "path", "verbs", "formats", "accepts", "lifecycle", "open", "run"],
  "properties": {
    "id": { "type": "string" },
    "rev": { "type": "string" },
    "schema": { "type": "string", "format": "uri", "default":"http://api.npolar.no/schema/api"},
    "base": { "type": "string", "format": "uri", "default":"http://api.npolar.no"},
    "version": { "type": "string" },
    "before": { "type": "string" },
    "after": { "type": "string" },
    "path": { "type": "string", "pattern": "^[/]"},
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "storage": { "type": ["string", "null"] },
    "search": { "type": "object" },
    "database": { "type": ["string", "null"] },
    "model": { "type": ["string", "null"] },
    "verbs": { "type": "array" },
    "middleware": { "type": "array" },
    "formats": { "type": "object" },
    "accepts": { "type": "object" },
    "category": { "type": "array" },
    "lifecycle": { "type": "string", "default": "production" },
    "run": { "type": ["string", "null"] },
    "open": { "type": "boolean" },
    "auth": { "type": "object" },
    "created_by": { "type": ["string", "object"] },
    "updated_by": { "type": ["string", "object"] },
    "updated": { "type": "string", "format": "datetime"},
    "published": { "type": "string", "format": "datetime"},
    "_id": { "type": "string" },
    "_rev": { "type": "string" }
  }
}
