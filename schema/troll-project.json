{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/troll-booking-1.0-rc1",
  "type": "object",
  "additionalProperties": false,
  "required": ["title"],
  "properties": {
    "id": {
      "type": "string"
    },
    "rev": {
      "type": "string"
    },
    "collection": {
      "type": "string",
      "default": "troll-project"
    },
    "schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "needs": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
         "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
             "type": "string",
             "format": "date-time"
          },
          "location": {
            "type": "string"
          },
          "personnel_needs": {
            "type": "string",
            "format": "email"
          },
          "material_needs": {
            "type": "string"
          }
        }
      }
    },
    "links": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel": {
            "type": "string",
             "enum": [
             "related",
             "program",
             "parent",
             "child",
             "dataset",
             "publication",
             "expedition",
             "project",
             "reference",
             "logo",
             "image"
            ]
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": ["string", "null"]
          },
          "hreflang": {
            "type": ["string", "null"]
          },
          "type": {
            "type": "string"
          }
        },
        "required": ["rel", "href"]
      }
    },
    "created": {
      "description": "Project was published",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "Project was updated",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "updated_by": {
      "type": "string"
    },
    "_id": {
      "description": "Internal id",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision",
      "type": "string"
    }
  }
}
