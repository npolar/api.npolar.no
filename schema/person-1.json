{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/person-1.0-rc1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "collection": {
      "enum": ["person"]
    },
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string"
    },
    "mobile": {
      "type": "string"
    },
    "workplace": {
      "type": "string"
    },
    "currently_employed": {
      "type": "boolean"
    },
    "on_leave": {
      "type": "boolean"
    },
    "jobtitle": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "en": {
          "type": "string"
        },
        "no": {
          "type": "string"
        },
        "nb": {
          "type": "string"
        },
        "nn": {
          "type": "string"
        }

      }
    },
    "events": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["hired", "quit", "re-hired", "returned_from_leave", "on_leave"]
          },
          "date": {
            "type": "string",
            "pattern": "^[0-9]{4}"
          },
          "comment": {
            "type": "string"
          }
        }
      }
    },
    "organisation": {
      "type": "string"
    },
    "orgtree": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel": {
            "type": "string"
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "hreflang": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "default": "text/html"
          }
        }
      },
      "required": ["rel", "href"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "additionalItems": false
    },
    "comment": {
      "type": "string"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "updated_by": {
      "type": "string"
    },
    "uuid": {
      "type": "string"
    },
    "_id": {
      "type": "string"
    },
    "_rev": {
      "type": "string"
    },
    "hired": {
      "type": "string",
      "pattern": "^[0-9]{4}(-[0-1][0-9])?(-[0-3][0-9][zZ]?)?"
    },
    "left": {
      "type": "string",
      "pattern": "^[0-9]{4}(-[0-1][0-9])?(-[0-3][0-9][zZ]?)?"
    }
  },
  "required": ["first_name", "last_name", "id"]
}
