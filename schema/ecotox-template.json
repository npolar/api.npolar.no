{
	"id": "http://api.npolar.no/schema/ecotox-template",
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Ecotox-template",
	"description": "Templates for Norwegian Polar Institute's ecotox database.",
	"type": "object",
	"required":[
			"title"
  		    ],
	"properties": {
		"id": {
			"description": "Resource identifier (UUID).",
			"type": "string"
		},
		"schema": {
			"description": "Schema defining this object (this schema).",
			"type": "string",
			"enum": [
				"http://api.npolar.no/schema/ecotox-template"
			]
		},
		"title": {
			"description": "Template name",
			"type": "string"
		},
		"parameters_metadata": {
			"description": "Collection of fixed parameters",
			"type": "object",
      			"additionalProperties": false,
			"properties":{
		      		"project_group": {
			       		"description": "Projectname data belongs to (if larger project) or type of project",
			       		"type": "boolean"
		        	},
		        	"parent_event_id": {
			       		"description": "Connection to expedition database",
			       		"type": "boolean"
		        	},
		        	"ris_id": {
		               		"description": "RiS number",
			       		"type": "boolean"
		        	},
		        	"rightsholder": {
			       		"description": "Institution(s) who owns the collected data",
			       		"type": "boolean"
		        	},
							"people_responsible": {
			       		"description": "People responsible for the dataset and organisation",
			       		"type": "boolean"
		        	},
		        	"people_collector": {
			       		"description": "Person collecting the sample",
			       		"type": "boolean"
		        	},
							"reference": {
		 	       		"description": "Reference that describes the data",
		 	       		"type": "boolean"
		 		}}
				},
				"parameters_time_and_place": {
					"description": "Time and place",
					"type": "object",
					"properties":{
						"event_date": {
							  "description": "Date of event/work carried out",
								"type": "boolean"
		         },
						"placename": {
								"description": "Placename",
								"type": "boolean"
						},
						"latitude": {
								 "description": "Latitude",
								 "type": "boolean"
						},
						"longitude": {
								"description": "Latitude",
								"type": "boolean"
						},
        		"position_accuracy": {
					  	   "description": "Accuracy of latitude and longitude measurement",
								 "type": "boolean"
							 }
						 }
		 			},
	       "parameters_base": {
			"description": "Base",
			"type": "object",
			"properties":{
				"species": {
					    	"description": "Species name",
						    "type": "boolean"
				 },
        "species_identification": {
              	"description": "Ring id, fox/polar bear id etc",
              	"type":"boolean"
          			},
				"matrix":{
						"description": "Sample matrix",
						"type": "boolean"
				},
				"age": {
					   "description": "Age of species sample is collected from",
					   "type": "boolean"
				},
				"stage": {
					   "description": "Stage of species sample is collected from",
				     	   "type": "boolean"
				},
				"sex": {
					   "description": "Sex of species sample is collected from",
				           "type": "boolean"
				},
				"weight": {
					   "description": "Weight of species sample is collected from",
					   "type": "boolean"
				},
				"girth": {
					   "description": "Girth of species sample is collected from",
					   "type": "boolean"
				},
				"length": {
					   "description": "Length of species sample is collected from",
				     "type": "boolean"
				},
				"condition": {
					   "description": "Bird/animal condition",
					   "type": "boolean"
				},
				"morphology":  {
					   "description": "Morphology on fauna",
					   "type": "boolean"
				},
				"subspecies":  {
				     "description": "Subspecies of specified species",
					   "type": "boolean"
				},
				"no_samples_amount":{
					   "description": "Number of samples taken, amount, sample size etc",
					   "type": "boolean"
				},
				"comment": {
					   "description": "Comment/remark about the sample",
					   "type": "boolean"
				}
				}
    				},
	    "parameters_loggers": {
			"description": "Loggers",
			"type": "object",
			"properties":{
				"logger_status":  {
					 "description": "Status of logger",
					 "type": "boolean"
				},
				"logger_model_retrieved":  {
					 "description": "Model name of logger retrived",
					 "type": "boolean"
				},
				"logger_id_retrieved":  {
					 "description": "Id of logger retrived from bird",
					 "type": "boolean"
				},
				"logger_model_deployed":  {
					 "description": "Model name of logger deployed on bird",
					 "type": "boolean"
				},
				"logger_id_deployed":  {
					 "description": "Id of logger deployed on bird",
					 "type": "boolean"
				},
				"logger_mount_method":  {
					 "description": "Where was the logger mounted",
					 "type": "boolean"
				}
				}
	 			},
	    "parameters_birds": {
		     "description": "Birds",
		     "type": "object",
		     "properties":{
				"colour_ring":{
					"description":"Color of ring",
            				"type": "boolean"
          			},
				"euring_code":{
					"description":"EU ring code, usually NOS",
					"type":"boolean"
          			},
				"molt": {
					"description": "Molting",
					"type": "boolean"
					},
				"tarsus": {
					"description": "Tarsus",
					"type": "boolean"
					},
				"bill": {
					"description": "Bill length",
					"type": "boolean"
					},
				"bill_height": {
					"description": "Bill height",
					"type": "boolean"
					},
				"scull": {
					"description": "Head+bill length, or just head or scull",
					"type": "boolean"
					},
				"wing": {
					"description": "Maximum flatted cord in mm",
					"type": "boolean"
					},
				"nest_id":  {
					"description": "Id of nest",
					"type": "boolean"
					},
				"egg_length":  {
					"description": "Egg length",
					"type": "boolean"
					},
				"egg_width":  {
					"description": "Egg width",
					"type": "boolean"
					},
				"clutch_size":  {
					"description": "Number of eggs in clutch",
					"type": "boolean"
					},
				"fledge_chicks":  {
					"description": "Number of chick able to fledge",
					"type": "boolean"
					},
				"method_deciding_sex":  {
					"description": "method used to decide sex",
					"type": "boolean"
					},
				"breeding_stage":  {
					"description": "stage describing the breeding process",
					"type": "boolean"
					},
				"bird_returned_to_nest":  {
					"description": "describe the severety of disturbance - has the brid returned to the nest afterwards",
					"type": "boolean"
					}
			  	}
    				},
		"parameters_mammals": {
			"description": "Mammals",
			"type": "object",
			"properties":{
					"blubber_thickness_back": {
							"description": "Length of species sample is collected from",
							"type": "boolean"
					},
					"tusk_volume": {
							"description": "Tusk volume",
							"type": "boolean"
					},
					"tusk_length": {
							"description": "Tusk length",
							"type": "boolean"
					},
					"tusk_girth": {
							"description": "Tusk girth",
							"type": "boolean"
					}
		  		}
    			},
		"parameters_marine_life": {
			"description": "Sea life, ocean life",
			"type": "object",
			"properties":{
				"caudal_length": {
					 "description": "Caudal length",
					 "type": "boolean"
				}
		  	}
    		},
		"use_list": {
		 "title": "Fetch information from Svalbard Placenames on these fields",
		 "type": "array",
		 "uniqueItems": true,
		 "additionalItems": false,
		 "items": {
			  "type": "string",
			  "enum": [
				 "placename",
				 "latitude",
				 "longitude"
    		]}
	  	},
		"additional": {
			"title": "Name of additional data fields",
			"type": "array",
		  	"items": {
				"type":"object",
				"properties": {
			    "parameter_name": {
				    "description": "Parameter name",
				    "type": "string"
			    },
			    "parameter_description": {
				    "description": "Parameter description",
				    "type": "string"
			}}}
		},
		"collection": {
			"description": "The storage collection the document belongs to.",
			"type": "string",
			"enum": [
				"ecotox-template"
			]
		},
		"created": {
			"description": "The date the document was created.",
			"type": "string",
			"format": "date-time"
		},
		"updated": {
			"description": "The date the document was last updated.",
			"type": "string",
			"format": "date-time"
		},
		"created_by": {
			"description": "The username of the person who first created the document in the system.",
			"type": "string"
		},
		"updated_by": {
			"description": "The username of the person who last updated the document in the system.",
			"type": "string"
		},
		"_id": {
			"description": "Internal resource identifier.",
			"type": "string"
		},
		"_rev": {
			"description": "Internal revision number.",
			"type": "string"
		},
		"_deleted": {
			"description": "Deleted entry",
			"type": "string"
		}
	}
}
