{
	"id": "http://api.npolar.no/schema/ecotox-template",
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Ecotox-template",
	"description": "Templates for Norwegian Polar Institute's ecotox database.",
	"type": "object",
	"required":[
			"title"
  ],
	"properties": {
		"id": {
			"description": "Resource identifier (UUID).",
			"type": "string"
		},
		"schema": {
			"description": "Schema defining this object (this schema).",
			"type": "string",
			"enum": [
				"http://api.npolar.no/schema/ecotox-template"
			]
		},
		"title": {
			"description": "Template name",
			"type": "string"
		},
		"parameters_background": {
			"description": "Collection of fixed parameters",
			"type": "object",
      "additionalProperties": false,
			"properties":{
		  "project": {
			    "description": "Project work is a part of",
					"type": "boolean",
					"default": true
		  },
		  "parent_event_id": {
			    "description": "Connection to expedition database",
					"type": "boolean",
					"default": true
		  },
		  "ris_id": {
		      "description": "RiS number",
					"type": "boolean"
		  },
		  "rightsholder": {
			    "description": "Institution(s) who owns the collected data",
					"type": "boolean",
					"default": true
		  },
			"people_responsible": {
				"description": "Name of sample collector",
				"type": "boolean"
		 },
		  "people_collector": {
			   "description": "Name of sample collector",
			   "type": "boolean"
		  },
			"reference": {
 			    "description": "Reference that describes the data",
 			    "type": "boolean"
 		  }}
		},
		"parameters_time_and_place": {
			"description": "Time and place",
			"type": "object",
			"properties":{
			"event_date": {
				 "description": "Date of event/work carried out",
				 "type": "boolean",
				 "default": true
		 },
		 "placename": {
				"description": "Placename",
				"type": "boolean"
			},
			"latitude": {
				 "description": "Latitude",
				 "type": "boolean"
			},
			"longitude": {
				 "description": "Latitude",
				"type": "boolean"
			}}
		},
		"parameters_base": {
			"description": "Birds",
			"type": "object",
			"properties":{
				"species": {
			    "description": "Species name",
					"type": "boolean",
					"default": true
		  },
		  "samples_remarks": {
	        "description": "Comment/remark about the samples",
					"type": "boolean"
		  },
		  "age": {
			   "description": "Age of species sample is collected from",
			   "type": "boolean"
		  },
		  "stage": {
			   "description": "Stage of species sample is collected from",
		     "type": "boolean"
		  },
		  "sex": {
			   "description": "Sex of species sample is collected from",
		     "type": "boolean"
		  },
		  "age_group": {
			   "description": "Age group of species sample is collected from",
		     "type": "boolean"
		  },
		  "weight": {
			    "description": "Weight of species sample is collected from",
					"type": "boolean"
		  },
		  "girth": {
			    "description": "Girth of species sample is collected from",
			    "type": "boolean"
		  },
		  "length": {
			    "description": "Length of species sample is collected from",
		      "type": "boolean"
		  }
		  }
    },
		"parameters_birds": {
			"description": "Birds",
			"type": "object",
			"properties":{
				"molt": {
					 "description": "Molt",
					 "type": "boolean"
				}
		  }
    },
		"parameters_mammals": {
			"description": "Mammals",
			"type": "object",
			"properties":{
					"blubber_thickness_back": {
							"description": "Length of species sample is collected from",
							"type": "boolean"
					},
					"tusk_volume": {
							"description": "Tusk volume",
							"type": "boolean"
					},
					"tusk_length": {
							"description": "Tusk length",
							"type": "boolean"
					},
					"tusk_girth": {
							"description": "Tusk girth",
							"type": "boolean"
					}
		  }
    },
		"use_list": {
		 "title": "Use Svalbard Placenames on these fields",
		 "type": "array",
		 "uniqueItems": true,
		 "additionalItems": false,
		 "items": {
			 "type": "string",
			 "enum": [
				 "placename",
				 "latitude",
				 "longitude"
    ]}},
		"additional": {
			"title": "Name of additional data fields",
			"type": "array",
		  "items": {
				"type":"object",
				"properties": {
			"parameter_name": {
				 "description": "Parameter name",
				 "type": "string"
			},
			"parameter_description": {
				 "description": "Parameter description",
				 "type": "string"
			}}}
		},
		"collection": {
			"description": "The storage collection the document belongs to.",
			"type": "string",
			"enum": [
				"ecotox-template"
			]
		},
		"comment": {
			"description": "Major revisions to the document",
			"type": "string"
		},
		"created": {
			"description": "The date the document was created.",
			"type": "string",
			"format": "date-time"
		},
		"updated": {
			"description": "The date the document was last updated.",
			"type": "string",
			"format": "date-time"
		},
		"created_by": {
			"description": "The username of the person who first created the document in the system.",
			"type": "string"
		},
		"updated_by": {
			"description": "The username of the person who last updated the document in the system.",
			"type": "string"
		},
		"_id": {
			"description": "Internal resource identifier.",
			"type": "string"
		},
		"_rev": {
			"description": "Internal revision number.",
			"type": "string"
		},
		"_deleted": {
			"description": "Deleted entry",
			"type": "string"
		}
	}
}
