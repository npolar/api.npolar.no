{
"$schema": "http://json-schema.org/draft-04/schema#",
"id": "http://api.npolar.no/schema/images-1.0-rc4",
"title": "Norwegian Polar Institute schema for all types of files",
"description": "General file upload",
"type":"object",
"additionalProperties": false,
"properties": {
"id": {
"description": "Identifier (UUID | URI). Also dwc:occurrenceID, dwc:catalogNumber",
"type": "string"
},
"schema": {
"type": "string"
},
"collection": {
"enum": [
"file"
]
},
"base": {
"enum": [
"http://api.npolar.no"
]
},
"pictures": {
"title": "file",
"description": "Subschema for file content",
"type": "array",
"additionalItems": false,
"items": {
"type":"object",
"additionalProperties":false,
"properties": {
"filename": {
"description": "picture file name",
"type": "string"
},
"content_type": {
"type": "string"
},
"content_size": {
"type": "string"
},
"photographer": {
"description": "name of photographer",
"type": "string"
},
"comments": {
"description": "comments related to picture",
"type": "string"
},
"other_info":{
"decription": "comments from older databases or whatever needed",
"type":"string"
}
}
}
},
"_id": {
"type": "string"
},
"_rev": {
"type": "string"
},
"_deleted": {
"type": "boolean"
}
}
}
