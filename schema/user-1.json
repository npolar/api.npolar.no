{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/user-1",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "_id": {
      "type": "string",
      "description": "Login e-mail address",
      "format": "email" 
    },
    "_rev": {
      "type": "string"
    },
    "created": { "type": "string", "format": "datetime" },
    "updated": { "type": "string", "format": "datetime" },
    "created_by": { "type": "string", "format": "email" },
    "updated_by": { "type": "string", "format": "email" },
    "password": {
      "type": "string",
      "description": "Salted and hashed password"
    },
    "salt": {
      "type": "string",
      "description": "Password salt (random string)"
    },
    "name": {
      "type": "string",
      "description": "Name of the user"
    },
    "groups": {
      "type": "array",
      "items": {
        "id": "http://api.npolar.no/schema/user-1/groups/0",
        "type": "string"
      }
    },
    "uri": {
      "type": "string",
      "description": "URI to the user's public profile"
    },
    "active": {
      "type": "boolean",
	  "default": true
    },
    "hash": {
      "type": "string",
	  "enum": [ "SHA-1", "SHA-256", "SHA-384", "SHA-512", "MD5" ],
	  "default": "SHA-512",
      "description": "Hash algorithm"
    },
    "systems": {
      "type": "array",
	  "description": "List of systems associated with the user",
      "items": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
			"description": "System URI (supports wildcards)"
          },
          "rights": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "create",
                "read",
                "update",
                "delete"
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "_id",
    "password",
    "salt",
    "name",
    "active",
    "hash",
    "systems"
  ]
}
