{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://api.npolar.no/schema/indicator-timeseries-1",
	"type": "object",
	"properties": {
		"_id": {
			"type": "string"
		},
		"_rev": {
			"type": "string"
		},
		"workspace": {
			"type": "string"
		},
		"systems": {
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1
			},
			"minItems": 1,
			"additionalItems": false
		},
		"created": {

			"type": "string",
			"format": "date-time"
		},
		"created_by": {

			"type": "string"
		},
		"species": {

			"type": "string"
		},
		"longitude": {
			"type": "number"
		},
		"latitude": {
			"type": "number"
		},
		"unit": {
			"type": "object",
			"properties": {
				"symbol": {
					"type": "string"
				}
			},
			"additionalItems": false
		},
		"links": {

			"type": "array",
			"items": {

				"type": "object",
				"properties": {
					"href": {

						"type": "string"
					},
					"rel": {

						"type": "string"
					},
					"type": {

						"type": "string"
					}
				},
				"additionalProperties": false
			},
			"additionalItems": false
		},
		"id": {
			"type": "string"
		},
		"parameter": {
			"type": "string"
		},
		"titles": {
			"type": "array",
			"items": {

				"type": "object",
				"properties": {
					"lang": {

						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"label": {
						"type": "string"
					}

				},
				"additionalProperties": false
			},
			"additionalItems": false
		},
		"schema": {

			"type": "string"
		},
		"collection": {

			"type": "string"
		},
		"locations": {
			"type": "array",
			"additionalItems": false,
			"items": {
				"type": "object",
				"additionalProperties": true,
				"properties": {
					"placename": {
						"type": "string"
					},
					"area": {
						"type": "string"
					},
					"country": {
						"description": "Country code like ISO 3611-1, except 'NO' for Norway, including Svalbard and Jan Mayen, Bouvetøya, and Peter I Øy. 'AQ' = Antarctica.",
						"type": [
							"string",
							"null"
						],
						"pattern": "^(([A-Z]|[a-z]){2})$"
					},
					"latitude": {
						"type": "number"
					},
					"longitude": {
						"type": "number"
					}
				}
			}
		},
		"variables": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"variable": {
						"type": "string"
					},
					"type": {
						"type": "string"
					},
					"time": {
						"type": "boolean"
					}
				}
			}
		},
		"labels": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"lang": {
						"type": "string"
					},
					"variable": {
						"type": "string"
					},
					"label": {
						"type": "string"
					}
				}
			}
		},
		"resolution": {
			"type": "string",
			"enum": ["year", "month", "day", "hour", "minute", "second"],
			"default": "year",
			"description": "Data period (minimum time between reported values)"
		},
		"data": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"when": {
						"type": ["string", "null"],
						"pattern": "^[0-9]{4}"
					},
					"value": {
						"type": ["number", "null"]
					},
					"low": {
						"type": ["number", "null"]
					},
					"high": {
						"type": ["number", "null"]
					},
					"min": {
						"type": ["number", "null"]
					},
					"max": {
						"type": ["number", "null"]
					}
				},
				"additionalProperties": false
			},
			"additionalItems": false
		},
		"updated": {

			"type": "string",
			"format": "date-time"
		},
		"updated_by": {

			"type": "string"
		}
	},
	"additionalProperties": false,
	"required": [
		"titles",
		"systems",
		"workspace",
		"collection"
	]
}