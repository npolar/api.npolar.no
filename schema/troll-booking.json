{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://api.npolar.no/schema/troll-booking",
  "type": "object",
  "additionalProperties": false,
  "required": ["research_type", "research_station"],
  "properties": {
    "id": {
      "type": "string"
    },
    "rev": {
      "type": "string"
    },
    "collection": {
      "type": "string",
      "default": "troll-booking"
    },
    "schema": {
      "type": "string"
    },
     "research_station": {
      "type": "string",
      "enum": ["troll","norwegia"]
    },
    "research_type": {
      "type": "string",
      "enum": ["research_monitoring","research_project", "logistic_operations", "VIP", "other"]
    },
     "summary": {
      "type": "string"
    },
    "start_date": {
       "type": "string",
       "format": "date-time"
    },
    "end_date": {
       "type": "string",
       "format": "date-time"
    },
     "research_project": {
      "type": "string"
    },
    "research_disciplines": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string",
        "enum": [
        "acidification",
        "atmosphere",
        "biology",
        "biogeochemistry",
        "chemistry",
        "climate",
        "conservation",
        "ecology",
        "ecotoxicology",
        "environment",
        "geophysics",
        "geology",
        "glaciology",
        "history",
        "human-dimension",
        "management",
        "marine",
        "maps",
        "oceanography",
        "other",
        "paleoclimate",
        "remote-sensing",
        "seaice","snow",
        "terrestrial",
        "topography",
        "vegetation"
        ]
      }
    },
    "people": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "number_of_persons": {
            "type": "string"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "organisation": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "role": {
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "string",
              "enum": [
                "carpenter",
                "chef",
                "electrician",
                "expedition_leader",
                "field_assistant",
                "field_responsible",
                "investigator",
                "it",
                "ksat",
                "mecanic",
                "mecanic_taf",
                "other",
                "physician",
                "pilot",
                "research_technician",
                "security",
                "service_technician",
                "transport",
                "vip"
            ]
          }
          },
          "dates": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
           "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
       }
     }
    },
    "links": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel": {
            "type": "string",
             "enum": [
             "related",
             "program",
             "parent",
             "child",
             "dataset",
             "publication",
             "expedition",
             "project",
             "reference",
             "logo",
             "image"
            ]
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": ["string", "null"]
          },
          "hreflang": {
            "type": ["string", "null"]
          },
          "type": {
            "type": "string"
          }
        },
        "required": ["rel", "href"]
      }
    },
    "comment": {
      "type": "string"
    },
    "changes": {
      "type": "string"
    },
    "created": {
      "description": "Project was published",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "Project was updated",
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "updated_by": {
      "type": "string"
    },
    "_id": {
      "description": "Internal id",
      "type": "string"
    },
    "_rev": {
      "description": "Internal revision",
      "type": "string"
    },
    "_deleted": {
      "description": "Deleted or not",
      "type": "boolean"
    }
  }
}
