          "departure_transport": {
                 "type": "string",
                  "enum": ["FL1", "FL2","FL3","FL4","FL5",
                         "FL6","FL7", "ship", "helicopter", "other"]
           },
           "entry_date": {
            "type": "string",
            "format": "date-time"
          },
          "departure_date": {
            "type": "string",
            "format": "date-time"
